{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "agent": {
    // NOTE: Settings for default agents. Custom agents are stored in agent/*.md files
    "build": {
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-5",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "plan": {
      "mode": "primary",
      "model": "anthropic/claude-haiku-4-5",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    }
  },
  "mcp": {
    // FIXME: set this up
    // "jira": {
    //
    // },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    }
  },
  "command": {
    "test": {
      "template": "Run the full test suite with coverage report and show any failures.\nFocus on the failing tests and suggest fixes.",
      "description": "Run tests with coverage",
      "agent": "build",
      "model": "anthropic/claude-haiku-4-5"
    }
  }
}
